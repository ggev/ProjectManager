@using Microsoft.AspNetCore.Http;

@model ProjectManager.Models.Employees
@{
    ViewData["Title"] = "SendOnVacation";
    if (Context.Session.GetString("UserId") == null)
    {
        Context.Response.Redirect("/Login/SignIn");
    }
}
<h2>Send On Vacantion</h2>
    <h3>@Model.FullName</h3>
<div class="row">
    <div class="col-md-2">
        <form asp-action="SendOnVacation" method="post">
            <div class="form-group">
                <label asp-for="Vacation" class="control-label"></label>
                <input asp-for="Vacation" value="" class="form-control" />
                <span asp-validation-for="Vacation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button asp-route-id=@Model.EmployeeId>Submit</button>
            </div>
        </form>
    </div>
</div>

