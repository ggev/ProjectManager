@using Microsoft.AspNetCore.Http;

@model ProjectManager.Models.Employees

@{
    ViewData["Title"] = "SetOvertime";
    if (Context.Session.GetString("UserId") == null)
    {
        Context.Response.Redirect("/Login/SignIn");
    }
}

<h2>SetOvertime</h2>
<h3>@Model.FullName</h3>
<div class="row">
    <div class="col-md-1">
        <form asp-action="SetOvertime" method="post">
            <div class="form-group">
                <label asp-for="Overtime" class="control-label"></label>
                <input asp-for="Overtime" min="0" max="4" class="form-control" />
                <span asp-validation-for="Overtime"></span>
            </div>
            <div class="form-group">
                <button asp-route-id=@Model.EmployeeId>Submit</button>
            </div>
        </form>
    </div>
</div>
